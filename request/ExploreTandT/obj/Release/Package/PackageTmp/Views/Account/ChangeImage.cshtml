@model ExploreTandT.Models.ImageViewModel

@{
    ViewBag.Title = "ChangeImage";
}

<style>
    .text-validate{
        color:white;
    }
    </style>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ChangeImage</title>
</head>
<body>
   <div id="Admin_Account">
    <div class="container">
        <h1 class="AdminAccount"></h1>
        <div class="AdminAccount-form">
            @using (Html.BeginForm("ChangeImage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-validate" })

                <div class="form-group">
                  
                    <div class="col-md-10">
                      
                            <input class="btn btn-primary btn-responsive" type="file" name="Image" id="Image" />
                      
                    </div>
                </div>


                <div class="form-group">

                    <input type="submit" value="Change Image" class="btn btn-primary btn-responsive" />
                    <a href="~/Account/Index/" type="button" class="btn btn-primary btn-responsive"> Back</a>
                </div>
            </div>
               
            }

            
         </div>
        </div>
       </div>
</body>
</html>
