@model ExploreTandT.Models.DocumentViewModel

@{
    ViewBag.Title = "AddPackages";
}
<style>
    .text-validate {
        color: white;
    }
</style>

<div id="RegisterForm">
    <div class="container">
        <h1 class="form-heading"></h1>
        <div class="Register-form">
            <div class="main-div">
                <div class="panel" style="background-color: transparent;">
                    <h2>Add Required Documents</h2>
                </div>
                @using (Html.BeginForm("AddDocuments", "EmployeeLoan", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {

                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.DisplayFor(model => model.Document)
                        </div>

                        @for (int i = 0; i < Model.temp; i++)
                        {
                            <div class="form-group">


                                <input type="file" name="ImageFile" required multiple>



                            </div>
                        }
                    </div>

                    <input type="submit" value="Add" class="btn btn-primary btn-responsive" onclick="return confirm('Are you sure you wish to upload documents?');" />
                    <a href="~/Admin/dashboard/" class="btn btn-primary btn-responsive">Back</a>

                }

            </div>
        </div>
    </div>
</div>
