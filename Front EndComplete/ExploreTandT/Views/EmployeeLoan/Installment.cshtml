@model ExploreTandT.Models.AdminViewModel

@{
    ViewBag.Title = "Installment";
}
<div id="Admin_Account">
    <div class="container">
        <h1 class="AdminAccount"></h1>
        <div class="AdminAccount-form">

            <h2 class="Column2" style="color:black">Loan</h2>

            <p class="listText" style="color:black">List of Installments</p>

            <div class="table-responsive" style="color:black">
                <table class="table table-Simple" style="color:black">
                    <thead class="Column1" style="color:black">
                        <tr>

                            <th scope="col"> @Html.DisplayNameFor(model => model.listOfInstallements[0].Id)</th>
                            <th scope="col"> @Html.DisplayNameFor(model => model.listOfInstallements[0].LoanId)</th>
                            <th scope="col">  @Html.DisplayNameFor(model => model.listOfInstallements[0].InstallementPlan)</th>
                            <th scope="col"> @Html.DisplayNameFor(model => model.listOfInstallements[0].Amount)</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.listOfInstallements)
                        {
                            <tr>

                                <th scope="row">
                                    @Html.DisplayFor(modelItem => item.Id)
                                </th>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LoanId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InstallementPlan)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Amount)
                                </td>

                                <td>
                                    @Html.ActionLink("Select", "AddDocuments", "EmployeeLoan", new { id = item.LoanId, lid = item.Id}, new { @class = "btn btn-primary btn-responsive" })
                                    @*<a href="~/EmployeeLoan/AddDocuments/@item.LoanId/@item.Id" value="Select" class="btn btn-primary btn-responsive" type="button" onclick="return confirm('Are you sure you want to Select this Installment plan?');">Select</a>*@
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>
        </div>

    </div>
</div>

