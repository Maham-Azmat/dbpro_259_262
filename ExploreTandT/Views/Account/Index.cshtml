@model ExploreTandT.Models.UserAccountViewModel

@{
    ViewBag.Title = "Index";
}
@if(ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("ViewBag.Message");
        };
    </script>
}
<div id="Admin_Account">
    <div class="container">
        <h1 class="AdminAccount"></h1>
        <div class="AdminAccount-form">

            <div class="d-flex justify-content-center h-100">
                <div class="image_outer_container">
                    <!--<div class="green_icon"></div>-->
                    <div class="image_inner_container">
                        <img src="@ViewBag.Image">
                    </div>
                    <div class="text-right">
                        <a href="~/Account/ChangeImage/" type="button" class="btn btn-primary btn-responsive">Change Image</a>
                    </div>
                </div>
                <div class="text-right">
                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                    {
                        @Html.AntiForgeryToken()
                        <a href="javascript:document.getElementById('logoutForm').submit()" type="button" class="btn btn-primary btn-responsive">LogOff </a>
                    }

                </div>
            </div>

            <h2 style="font-size: 30px; color: white" ;>My Details</h2>

            <!--<span class="glyphicon glyphicon-user" aria-hidden="true"></span>-->
            <div class="table-responsive">
                <table class="table table-Simple">
                    <thead class="Column1">
                        <tr>

                            <th scope="col"> @Html.DisplayNameFor(model => model.listofusers[0].Name)</th>
                            <th scope="col">  @Html.DisplayNameFor(model => model.listofusers[0].Email)</th>
                            <th scope="col"> @Html.DisplayNameFor(model => model.listofusers[0].Address)</th>
                            <th scope="col">  @Html.DisplayNameFor(model => model.listofusers[0].CNIC)</th>
                            <th scope="col"> @Html.DisplayNameFor(model => model.listofusers[0].PhoneNumber)</th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.listofusers)
                        {
                            <tr>

                                <th scope="row">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </th>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CNIC)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                                </td>

                                <td>
                                    <a href="~/Account/Edit/" type="button" class="btn btn-primary btn-responsive">Edit Details </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <p class="listText">List of All Trips</p>
            <div class="text-right">
                <a href="~/Packages/Index/" type="button" class="btn btn-primary btn-responsive">Show Packages</a>
            </div>

           
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>

                            <th scope="col"> @Html.DisplayNameFor(model => model.listofpackages[0].Name)</th>
                            <th scope="col">  @Html.DisplayNameFor(model => model.listofpackages[0].Category)</th>
                            <th scope="col"> @Html.DisplayNameFor(model => model.listofpackages[0].Places)</th>
                            <th scope="col">  @Html.DisplayNameFor(model => model.listofpackages[0].Range)</th>
                            <th scope="col">  @Html.DisplayNameFor(model => model.listofpackages[0].TourGuide)</th>
                            <th scope="col"> @Html.DisplayNameFor(model => model.listofpackages[0].Schedule)</th>
                            <th scope="col">  @Html.DisplayNameFor(model => model.listofpackages[0].Vehicle)</th>
                            <th scope="col"> @Html.DisplayNameFor(model => model.listofpackages[0].Hotel)</th>
                            <th scope="col">   @Html.DisplayNameFor(model => model.listofpackages[0].Refreshments)</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.listofpackages)
                        {
                            <tr>

                                <th scope="row">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </th>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Places)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Range)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TourGuide)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Schedule)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Vehicle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Hotel)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Refreshments)
                                </td>
                                <td>
                                    <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_blank">
                                        <input id="b" type="hidden" name="cmd" value="_s-xclick">
                                        <input id="b" type="hidden" name="hosted_button_id" value="KRLPCNQDCL4KS">
                                        <input id="b" type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_buynowCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
                                        <img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
                                    </form>
                                </td>
                                <td>

                                    <a href="~/Account/CancelPackage/@item.checkid/" type="button" class="btn btn-primary btn-responsive" onclick="return confirm('Are you sure you wish to Cancel this Package?');">Cancel</a>
                                </td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.Message");
        };
    </script>
}


