@model ExploreTandT.Models.AllPackageViewModel

@{
    ViewBag.Title = "AddPackages";
}
<style>
    .text-validate {
        color: white;
    }
</style>

<div id="RegisterForm">
    <div class="container">
        <h1 class="form-heading"></h1>
        <div class="Register-form">
            <div class="main-div">
                <div class="panel" style="background-color: transparent;">
                    <h2>Add Packages</h2>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">

                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "*Package Name" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-validate" })
                        </div>


                        <div class="form-group">

                            @{
                                List<SelectListItem> Typedl = new List<SelectListItem>();
                                Typedl.Add(new SelectListItem { Text = "Beaches", Value = "Beaches" });
                                Typedl.Add(new SelectListItem { Text = "Forts", Value = "Forts" });
                                Typedl.Add(new SelectListItem { Text = "Hill Stations", Value = "Hill Stations" });
                                Typedl.Add(new SelectListItem { Text = "Historical places", Value = "Historical places" });
                                Typedl.Add(new SelectListItem { Text = "Meadows", Value = "Meadows" });
                                Typedl.Add(new SelectListItem { Text = "Monuments", Value = "Monuments" });
                                Typedl.Add(new SelectListItem { Text = "Northern Areas", Value = "Northern Areas" });
                                Typedl.Add(new SelectListItem { Text = "Waterfall", Value = "Waterfall" });

                            }

                            @Html.DropDownList("Category", Typedl, "Select category", new { @class = "form-control" });
                        </div>


                        <div class="form-group">

                            @Html.EditorFor(model => model.Places, new { htmlAttributes = new { @class = "form-control", placeholder = "*Place" } })
                            @Html.ValidationMessageFor(model => model.Places, "", new { @class = "text-validate" })
                        </div>


                        <div class="form-group">

                            @Html.EditorFor(model => model.Range, new { htmlAttributes = new { @class = "form-control", placeholder = "*Range In Rs" , @Value = ViewBag.correlativo, @min = "0", @max = "9999" } })
                            @Html.ValidationMessageFor(model => model.Range, "", new { @class = "text-validate" })
                        </div>



                        <div class="form-group">

                            <select name="TourGuide" id="TourGuide" class="form-control">
                                <option selected="" value="0">Select The Tour Guide</option>
                                @{
                                    if (ViewBag.name != null)
                                    {
                                        foreach (var item in ViewBag.name)
                                        {
                                            <option value="@item">@item</option>
                                        }
                                    }
                                }
                            </select>

                        </div>



                        <div class="form-group">

                            @Html.EditorFor(model => model.Schedule, new { htmlAttributes = new { @class = "form-control", placeholder = "*Schedule" } })
                            @Html.ValidationMessageFor(model => model.Schedule, "", new { @class = "text-validate" })
                        </div>


                        <div class="form-group">

                            @Html.EditorFor(model => model.Vehicle, new { htmlAttributes = new { @class = "form-control", placeholder = "*Vehicle" } })
                            @Html.ValidationMessageFor(model => model.Vehicle, "", new { @class = "text-validate" })
                        </div>


                        <div class="form-group">


                            @Html.EditorFor(model => model.Hotel, new { htmlAttributes = new { @class = "form-control", placeholder = "*Hotel" } })
                            @Html.ValidationMessageFor(model => model.Hotel, "", new { @class = "text-validate" })
                        </div>


                        <div class="form-group">

                            @Html.EditorFor(model => model.Refreshments, new { htmlAttributes = new { @class = "form-control", placeholder = "*Refreshments" } })
                            @Html.ValidationMessageFor(model => model.Refreshments, "", new { @class = "text-validate" })
                        </div>


                        <input type="submit" value="Add" class="btn btn-primary btn-responsive" onclick = "return confirm('Are you sure you wish to Add Package?');"  />
                        <a href="~/Admin/dashboard/" class="btn btn-primary btn-responsive">Back</a>
                    </div>

                }
            </div>
        </div>
    </div>
</div>


