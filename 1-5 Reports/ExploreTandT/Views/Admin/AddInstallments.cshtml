@model ExploreTandT.Models.InstallmentViewModel

@{
    ViewBag.Title = "AddInstallments";
}
<style>
    .text-validate {
        color: white;
    }
</style>

<div id="RegisterForm">
    <div class="container">
        <h1 class="form-heading"></h1>
        <div class="Register-form">
            <div class="main-div">
                <div class="panel" style="background-color: transparent;">
                    <h2 style="color:black">Add Loan Installments</h2>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">

                            @{
                                List<SelectListItem> Typedl = new List<SelectListItem>();
                                Typedl.Add(new SelectListItem { Text = "1", Value = "1" });
                                Typedl.Add(new SelectListItem { Text = "2", Value = "2" });
                                Typedl.Add(new SelectListItem { Text = "3", Value = "3" });
                                Typedl.Add(new SelectListItem { Text = "4", Value = "4" });
                                Typedl.Add(new SelectListItem { Text = "5", Value = "5" });
                                Typedl.Add(new SelectListItem { Text = "6", Value = "6" });
                                Typedl.Add(new SelectListItem { Text = "7", Value = "7" });
                                Typedl.Add(new SelectListItem { Text = "8", Value = "8" });
                                Typedl.Add(new SelectListItem { Text = "9", Value = "9" });
                                Typedl.Add(new SelectListItem { Text = "10", Value = "10" });
                                Typedl.Add(new SelectListItem { Text = "11", Value = "11" });
                                Typedl.Add(new SelectListItem { Text = "12", Value = "12" });

                            }

                            @Html.DropDownList("Plan", Typedl, "Select Plan", new { @class = "form-control" });
                        </div>


                        <input type="submit" value="Add" class="btn btn-primary btn-responsive" onclick="return confirm('Are you sure you want to Add this Installment?');" />
                        <a href="~/Admin/Loanlist/" class="btn btn-primary btn-responsive">Back</a>
                    </div>

                }
            </div>
        </div>
    </div>
</div>

