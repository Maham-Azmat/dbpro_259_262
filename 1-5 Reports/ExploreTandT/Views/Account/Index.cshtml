@model ExploreTandT.Models.UserAccountViewModel
@{
    ViewBag.Title = "dashboard";
}
@Html.Raw(TempData["msg"])
<div class="abc">
    <div class="wrapper">
        <aside class="main_sidebar">

            <ul>
                <li style="color: white"><h1 style="font-family: 'Raleway', sans-serif;">Details</h1></li>
                <li><i class="glyphicon glyphicon-user"></i><a href="/Admin/employeeloanlist">View loan list</a></li>
                <li><i class="glyphicon glyphicon-user"></i><a href="/Account/request">Notifications</a></li>
                <li><i class="glyphicon glyphicon-user"></i><a href="/Account/RepaymentSchedule">Payment Reschedule Plan</a></li>
                <li><i class="glyphicon glyphicon-user"></i><a href="/Account/SalaryDeduction">Salary Deduction Status</a></li>
                <li><i class="glyphicon glyphicon-user"></i><a href="~/EmployeeLoan/EmployeeLoan">Loan list</a></li>



            </ul>
        </aside>
        <div class="mian">
            <h1 style=" color: white;"> Prakash </h1>
        </div>
    </div>

    <div class="text-right">
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
        {
            @Html.AntiForgeryToken()
            <a href="javascript:document.getElementById('logoutForm').submit()" type="button" class="btn btn-primary btn-responsive">LogOff </a>
        }

    </div>
    <h2 style="font-size: 30px; color: black" ;>Employee Account</h2>

    <!--<span class="glyphicon glyphicon-user" aria-hidden="true"></span>-->


    <div class="row">
        <div class="col-md-9">

            <div class="table-responsive" style="color:black">
                <table class="table table-Simple" style="color:black">
                    <thead class="Column1" style="color:black">
                        <tr>
                            <th scope="col"> @Html.DisplayNameFor(model => model.listofusers[0].Id)</th>
                            <th scope="col"> @Html.DisplayNameFor(model => model.listofusers[0].FirstName)</th>
                            <th scope="col"> @Html.DisplayNameFor(model => model.listofusers[0].LastName)</th>
                            <th scope="col">  @Html.DisplayNameFor(model => model.listofusers[0].Email)</th>
                            <th scope="col"> @Html.DisplayNameFor(model => model.listofusers[0].Contact)</th>
                            <th scope="col">  @Html.DisplayNameFor(model => model.listofusers[0].Rank)</th>
                            <th scope="col"> @Html.DisplayNameFor(model => model.listofusers[0].Salary)</th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.listofusers)
                        {
                            <tr>
                                <th scope="row">
                                    @Html.DisplayFor(modelItem => item.Id)
                                </th>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Contact)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Rank)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Salary)
                                </td>

                                <td>
                                    <a href="~/Account/Edit/" type="button" class="btn btn-primary btn-responsive">Edit Details </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>



</div>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.Message");
        };
    </script>
}

